<h1>Search Pexels Images</h1>
<%= form_with url: root_path, method: :get do %>
  <%= label_tag :query, "Enter search term:" %>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @photos.present? %>
  <h2>Results:</h2>
  <% @photos.each do |photo| %>
    <img src="<%= photo['src']['medium'] %>" alt="<%= photo['photographer'] %>">
  <% end %>
<% end %>
